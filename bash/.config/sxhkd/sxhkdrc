
super + Return
  urxvt

super + shift +semicolon
  tilda

super + {i,n,r}
  {firefox,chromium --app=http://web.whatsapp.com,urxvt -name "ncmpcpp" -e ncmpcpp}

XF86AudioMute
  pactl set-sink-mute 0 toggle

XF86AudioRaiseVolume
  pactl -- set-sink-volume 0 +5%

XF86AudioLowerVolume
  pactl -- set-sink-volume 0 -5%


alt + {XF86AudioRaiseVolume,XF86AudioLowerVolume}
  {pactl -- set-sink-volume 0 +10%, pactl -- set-sink-volume 0 -10%}

super + Delete
  betterlockscreen --lock blur

super + {XF86AudioMute, XF86AudioRaiseVolume,XF86AudioLowerVolume}
  {mpc toggle,mpc next, mpc prev}
#  {rhythmbox-client --play-pause, rhythmbox-client --next, rhythmbox-client --previous}

alt + r
  killall -s USR1 redshift
# redshift -l 6.12:106.50 ; notify-send 'redshift on'
#  redshift -l 6.12:106.50 -m randr:screen=eDPi1

#alt + shift + r
 #pkill -x redshift ; notify-send 'redshift off'

super + Print
  flameshot full -p ~/Screenshot/ 

XF86MonBrightnessDown
  xbacklight -2
XF86MonBrightnessUp
  xbacklight +2

alt + {XF86MonBrightnessDown,XF86MonBrightnessUp}
  {sudo xbacklight -10,sudo xbacklight +10}

super + {bracketleft,bracketright,backslash}
  {mpc prev,mpc next, mpc toggle}

super + space
  rofi -show run
  
super + shift + space
  pkill -x sxhkd && sxhkd &
