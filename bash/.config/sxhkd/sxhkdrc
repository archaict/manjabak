
super + Return
  urxvt

super + shift +semicolon
  tilda

super + {i,n,r}
  {firefox,chromium --app=http://web.whatsapp.com,rhythmbox}

XF86AudioMute
  pactl set-sink-mute 0 toggle

XF86AudioRaiseVolume
  pactl -- set-sink-volume 0 +2%; notify-send 'volume up'

XF86AudioLowerVolume
  pactl -- set-sink-volume 0 -2%; notify-send 'volume down'

super + Delete
  betterlockscreen --lock blur

super + {XF86AudioMute, XF86AudioRaiseVolume,XF86AudioLowerVolume}
  {rhythmbox-client --play-pause, rhythmbox-client --next, rhythmbox-client --previous}

Print
  betterlockscreen --lock blur

XF86MonBrightnessDown
  xbacklight -2
XF86MonBrightnessUp
  xbacklight +2

alt + {XF86MonBrightnessDown,XF86MonBrightnessUp}
  {xbacklight -10,xbacklight +10}

super + {bracketleft,bracketright,backslash}
  {rhythmbox-client --previous,rhythmbox-client --next,rhythmbox-client --play-pause}

super + space
  rofi -show run
  
super + shift + space
  pkill -x sxhkd && sxhkd &
