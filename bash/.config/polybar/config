# CENTER MODULES #

[module/cpu]
type = internal/cpu
interval = 2
label = %percentage:3%U

format-prefix = 
format-prefix-foreground = ${colors.foreground}

format-underline = ${colors.outer}
format-overline = ${colors.outer}


[module/memory]
type = internal/memory
interval = 2
label = %percentage_used%

format-prefix = "MK"
format-prefix-foreground = ${colors.foreground-alt}

format-underline = ${colors.midouter}
format-overline = ${colors.midouter}

[module/date]
type = internal/date
interval = 5
label = %date%

date = %m.%d
date-alt = " %Y-%m-%d"

format-underline = ${colors.inner}
format-overline = ${colors.inner}

[module/mpd]
type = internal/mpd
format-online = <bar-progress> <icon-prev> <toggle> <label-song> <toggle> <icon-next> <bar-progress>

bar-progress-width = 9
bar-progress-indicator = 
bar-progress-fill = -
bar-progress-fill-foreground = #808080
bar-progress-empty = -
bar-progress-empty-foreground = #404040

icon-prev  = 
icon-play  = 
icon-pause = 
icon-next  = 

label-song = %artist% %album% %title%
;label-song-maxlen = 50
label-song-ellipsis = true
label-song-font=0

[module/time]
type = internal/date
interval = 5
label = %time%

time = %H.%M
time-alt = %H:%M:%S

